<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_publicar_imagen_placeholder"
            android:src="@drawable/agregar_img"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_galeria_imagenes"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_publicar_nombre"
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_publicar_precio"
            android:hint="Precio"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_publicar_direccion"
            android:hint="Dirección"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_publicar_descripcion"
            android:hint="Descripción"
            android:minLines="3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <AutoCompleteTextView
            android:id="@+id/spinner_categoria"
            android:hint="Categoría"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <AutoCompleteTextView
            android:id="@+id/spinner_condicion"
            android:hint="Condición"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_publicar_producto"
            android:text="Publicar"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"/>

    </LinearLayout>
</ScrollView>
