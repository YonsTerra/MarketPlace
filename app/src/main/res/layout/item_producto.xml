<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_producto_imagen"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_round"
            android:src="@drawable/agregar_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_producto_titulo"
                android:text="Nombre producto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_producto_precio"
                android:text="$120.000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/layout_acciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_editar"
                    android:text="Editar"
                    android:backgroundTint="#1976D2"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <Button
                    android:id="@+id/btn_eliminar"
                    android:text="Eliminar"
                    android:backgroundTint="#D32F2F"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
